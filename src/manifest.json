{
  "manifest_version": 3,
  "name": "NoMoreANime (Dev)",
  "version": "1.2",
  "description": "Personalize Crunchyroll: Hide unwanted anime in new releases.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.crunchyroll.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}